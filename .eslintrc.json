{
	"root": true,
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"plugins": ["prettier"],
	"extends": ["eslint:recommended", "plugin:jest/recommended"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018
	},
	"rules": {
		"prettier/prettier": "error",
		"no-useless-escape": 0
	}
}
